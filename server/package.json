{
  "name": "@studiohyperdrive/nodejs-boilerplate-server",
  "version": "0.0.0",
  "description": "Server directory for the Node.js boilerplate.",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "ts-node-dev -r tsconfig-paths/register --poll --inspect=0.0.0.0:5858 -- src/app.ts",
    "prebuild": "npm run clean:build",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run clean:coverage",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watchAll",
    "posttest": "npm run lint",
    "clean:build": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./test/coverage",
    "open:coverage": "open ./test/coverage/lcov-report/index.html"
  },
  "dependencies": {
    "express": "4.17.1",
    "tsconfig-paths": "3.8.0"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.8",
    "@types/supertest": "2.0.7",
    "dotenv": "8.0.0",
    "jest": "24.8.0",
    "jest-extended": "0.11.1",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node-dev": "1.0.0-pre.40",
    "tslint": "5.17.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.5.2"
  }
}
